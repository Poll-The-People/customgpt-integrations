# Instagram/Meta API Configuration
INSTAGRAM_ACCESS_TOKEN=your_instagram_page_access_token_here
INSTAGRAM_APP_SECRET=your_facebook_app_secret_here
WEBHOOK_VERIFY_TOKEN=your_custom_webhook_verification_token

# CustomGPT API Configuration
CUSTOMGPT_API_KEY=your_customgpt_api_key_here
CUSTOMGPT_API_BASE_URL=https://app.customgpt.ai/api/v1
DEFAULT_AGENT_ID=your_default_agent_id

# Server Configuration
HOST=0.0.0.0
PORT=3000
DEBUG=false
LOG_LEVEL=INFO

# Security & Rate Limiting
RATE_LIMIT_PER_USER_PER_MINUTE=10
RATE_LIMIT_PER_USER_PER_HOUR=50
MAX_MESSAGE_LENGTH=2000

# User Management (optional, comma-separated)
ALLOWED_USER_IDS=
BLOCKED_USER_IDS=

# Redis Configuration (optional, for production)
REDIS_URL=redis://localhost:6379

# Analytics Configuration (optional)
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=

# Feature Configuration
ENABLE_STARTER_QUESTIONS=true
ENABLE_CITATIONS=true
ENABLE_TYPING_INDICATOR=true