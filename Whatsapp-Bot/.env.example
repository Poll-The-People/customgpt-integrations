# CustomGPT Configuration
CUSTOMGPT_API_KEY=your_customgpt_api_key_here
CUSTOMGPT_PROJECT_ID=your_agent_id_here
CUSTOMGPT_API_URL=https://app.customgpt.ai

# Twilio Configuration (for WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886  # Your Twilio WhatsApp number

# Rate Limiting
RATE_LIMIT_DAILY=100
RATE_LIMIT_MINUTE=5
RATE_LIMIT_HOUR=30

# Security (Optional)
ALLOWED_NUMBERS=+1234567890,+0987654321  # Comma-separated whitelist (optional)
BLOCKED_NUMBERS=  # Comma-separated blocklist (optional)
MAX_MESSAGE_LENGTH=500
ENABLE_PROFANITY_FILTER=false

# Admin
ADMIN_API_KEY=your_admin_api_key_here  # For admin endpoints
ADMIN_NUMBERS=+1234567890  # Admin phone numbers

# Features
ENABLE_VOICE_MESSAGES=true
ENABLE_MEDIA_RESPONSES=true
ENABLE_LOCATION_SHARING=false
DEFAULT_LANGUAGE=en

# Redis (Optional - for production)
REDIS_URL=redis://localhost:6379

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_CONTEXT_MESSAGES=10

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Server Configuration
PORT=8000
DEBUG=false
LOG_LEVEL=INFO