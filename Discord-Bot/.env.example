# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_COMMAND_PREFIX=!

# CustomGPT Configuration
CUSTOMGPT_API_KEY=your_customgpt_api_key_here
CUSTOMGPT_AGENT_ID=your_agent_id_here

# Rate Limiting Configuration (per minute)
RATE_LIMIT_PER_USER=10
RATE_LIMIT_PER_CHANNEL=30
RATE_LIMIT_WINDOW=60

# Redis Configuration (optional - for distributed rate limiting)
# Leave empty to use local rate limiting
REDIS_URL=

# Security Configuration (optional)
# Comma-separated list of allowed channel IDs (leave empty to allow all)
ALLOWED_CHANNELS=
# Comma-separated list of allowed role IDs (leave empty to allow all)
ALLOWED_ROLES=

# Bot Features
ENABLE_STARTER_QUESTIONS=True
TYPING_INDICATOR=True
MAX_MESSAGE_LENGTH=2000

# Citations
ENABLE_CITATIONS=True