# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token  # Optional, for Socket Mode

# CustomGPT Configuration
CUSTOMGPT_API_KEY=your-customgpt-api-key
CUSTOMGPT_PROJECT_ID=your-default-project-id
CUSTOMGPT_API_BASE_URL=https://app.customgpt.ai/api/v1

# Rate Limiting
RATE_LIMIT_PER_USER=20
RATE_LIMIT_PER_CHANNEL=100

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Bot Behavior
MAX_MESSAGE_LENGTH=4000
SHOW_CITATIONS=true
ENABLE_THREADING=true
DEFAULT_LANGUAGE=en

# Security (optional)
ALLOWED_CHANNELS=C1234567890,C0987654321  # Comma-separated
BLOCKED_USERS=U1234567890,U0987654321    # Comma-separated

# Logging
LOG_LEVEL=INFO

# Analytics (optional)
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com/events

# Server Configuration
PORT=3000