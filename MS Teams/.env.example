# Microsoft Teams Bot Configuration
TEAMS_APP_ID=your-microsoft-app-id
TEAMS_APP_PASSWORD=your-microsoft-app-password
TEAMS_APP_TYPE=MultiTenant  # Options: MultiTenant, SingleTenant, Managed
TEAMS_TENANT_ID=  # Required only for SingleTenant apps

# CustomGPT Configuration
CUSTOMGPT_API_KEY=your-customgpt-api-key
CUSTOMGPT_PROJECT_ID=your-customgpt-project-id
CUSTOMGPT_API_BASE_URL=https://app.customgpt.ai/api/v1

# Rate Limiting Configuration
RATE_LIMIT_PER_USER=20  # per minute
RATE_LIMIT_PER_CHANNEL=100  # per hour
RATE_LIMIT_PER_TENANT=500  # per hour

# Redis Configuration (optional, for distributed rate limiting)
# REDIS_URL=redis://localhost:6379
# REDIS_SSL=false

# Bot Behavior Configuration
MAX_MESSAGE_LENGTH=4000
SHOW_CITATIONS=true
ENABLE_THREADING=true
DEFAULT_LANGUAGE=en
RESPONSE_TIMEOUT=30  # seconds

# Teams-Specific Configuration
REQUIRE_MENTION_IN_CHANNELS=true
RESPOND_TO_OTHER_BOTS=false
ENABLE_ADAPTIVE_CARDS=true
ENABLE_MEETING_SUPPORT=false
ENABLE_FILE_ATTACHMENTS=true
MAX_ATTACHMENT_SIZE=10485760  # 10MB in bytes

# Security Configuration (comma-separated lists)
# ALLOWED_TENANTS=tenant-id-1,tenant-id-2
# ALLOWED_CHANNELS=channel-id-1,channel-id-2
# BLOCKED_USERS=user-id-1,user-id-2
ENABLE_AUDIT_LOGGING=true

# Conversation Management
CONVERSATION_TIMEOUT=86400  # 24 hours in seconds
MAX_CONTEXT_MESSAGES=10
ENABLE_CONVERSATION_HISTORY=true

# Proactive Messaging Configuration
ENABLE_PROACTIVE_MESSAGES=false
PROACTIVE_MESSAGE_DELAY=5  # seconds

# Analytics Configuration
ENABLE_ANALYTICS=true
# ANALYTICS_ENDPOINT=https://your-analytics-endpoint
# APPLICATION_INSIGHTS_KEY=your-app-insights-key

# Logging Configuration
LOG_LEVEL=INFO

# Server Configuration
PORT=3978
HOST=0.0.0.0

# Development Configuration (optional)
# NGROK_AUTHTOKEN=your-ngrok-authtoken