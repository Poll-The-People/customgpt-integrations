# Rocket Chat Configuration
ROCKET_CHAT_URL=http://localhost:3000
ROCKET_CHAT_USER=bot_username
ROCKET_CHAT_PASSWORD=bot_password
# Optional: Use auth token instead of username/password
# ROCKET_CHAT_AUTH_TOKEN=your_auth_token
# ROCKET_CHAT_USER_ID=your_user_id

# CustomGPT Configuration
CUSTOMGPT_API_KEY=your_customgpt_api_key
CUSTOMGPT_PROJECT_ID=your_project_id
CUSTOMGPT_BASE_URL=https://app.customgpt.ai
CUSTOMGPT_API_TIMEOUT=30

# Bot Configuration
BOT_NAME=CustomGPT Bot
BOT_ALIAS=cgpt
BOT_DESCRIPTION=AI-powered assistant using CustomGPT

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CALLS=10
RATE_LIMIT_PERIOD=60
RATE_LIMIT_USER_CALLS=5
RATE_LIMIT_USER_PERIOD=60

# Security Configuration
# Comma-separated list of allowed channel IDs (leave empty for all channels)
ALLOWED_CHANNELS=
# Comma-separated list of blocked user IDs
BLOCKED_USERS=
MAX_MESSAGE_LENGTH=2000
ENABLE_LOGGING=true
LOG_LEVEL=INFO

# Feature Flags
ENABLE_STARTER_QUESTIONS=true
ENABLE_CITATIONS=true
ENABLE_FORMATTING=true
ENABLE_THREADING=true

# Response Configuration
DEFAULT_LANGUAGE=en
RESPONSE_TIMEOUT=30
MAX_RETRIES=3

# Monitoring Configuration
ENABLE_ANALYTICS=false
ANALYTICS_ENDPOINT=

# Starter Questions (separated by |)
STARTER_QUESTIONS=What can you help me with?|Tell me about your capabilities|How do I get started?|What kind of questions can I ask?|Show me some examples