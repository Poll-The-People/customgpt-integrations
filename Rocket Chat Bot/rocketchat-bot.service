[Unit]
Description=Rocket Chat CustomGPT Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/rocketchat-customgpt-bot
Environment="PATH=/home/ubuntu/rocketchat-customgpt-bot/venv/bin"
ExecStart=/home/ubuntu/rocketchat-customgpt-bot/venv/bin/python bot.py
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/home/ubuntu/rocketchat-customgpt-bot/logs

[Install]
WantedBy=multi-user.target