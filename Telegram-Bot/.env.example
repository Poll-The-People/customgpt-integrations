# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# CustomGPT API Configuration
CUSTOMGPT_API_URL=https://app.customgpt.ai
CUSTOMGPT_API_KEY=your_api_key_here
CUSTOMGPT_PROJECT_ID=your_project_id_here  # This is the agent ID

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# MongoDB Configuration (optional, for conversation history)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=customgpt_telegram_bot

# Rate Limiting
RATE_LIMIT_PER_USER_PER_DAY=100
RATE_LIMIT_PER_USER_PER_MINUTE=5

# Security
MAX_MESSAGE_LENGTH=4000
ALLOWED_USERS=  # Comma-separated list of user IDs (leave empty for public access)
WEBHOOK_SECRET=your_webhook_secret_here

# Monitoring
SENTRY_DSN=  # Optional: Sentry DSN for error tracking
LOG_LEVEL=INFO

# Bot Settings
DEFAULT_LANGUAGE=en
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=10

# Environment
ENVIRONMENT=development  # development, staging, production
